.theme-layer {
  width: 100%;
  height: 100%;
  background: #f5f9fc;
}
.theme-layer .content-box {
  width: 100%;
  height: 100%;
  overflow-y: auto;
}
.theme-layer .content-box .content-item {
  width: 90%;
  height: 60px;
  padding: 10px;
  border-radius: 10px;
  background: #fff;
  margin: 0 auto;
  margin-top: 15px;
  display: flex;
}
.theme-layer .content-box .content-item .item-left {
  height: 100%;
  margin-right: 20px;
}
.theme-layer .content-box .content-item .item-left .u-image {
  height: 100%;
}
.theme-layer .content-box .content-item .item-right {
  height: 100%;
}
.theme-layer .content-box .content-item .item-right .title {
  font-size: 16px;
  color: black;
  margin-bottom: 2px;
}
.theme-layer .content-box .content-item .item-right .address {
  font-size: 14px;
  margin-bottom: 2px;
  color: darkgray;
}
.theme-layer .content-box .content-item .item-right .time {
  font-size: 14px;
  color: dimgray;
}